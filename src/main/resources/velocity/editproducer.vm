#parse("/velocity/macros.vm")
#parse("/velocity/layout.vm")
#@mainLayout()

    <p class="heading">#if($!{form.id}>0)${messages.get("PAGETITLE_PRODUCER_CHANGE")}: $!{form.get($fields.valueOf("NAME"))}#else ${messages.get("PAGETITLE_PRODUCER_ADD")}#end</p>
    <p><img id="helpimg" height="22" width="22" src="/img/help_black.png" title="show help" onclick="switchHelp()"></p>
    <div id="help">
        <p class="helptitle">Selektierten Hersteller ändern</p>
        <p>Ergänze alle Felder</p>
        <p></p>
    </div>

    <div class="formbox">
    #if($!{form.id}>0)
        <form method="POST" action="/producer/${form.id}/">
    #else
        <form method="POST" action="/producer/0/">
    #end
    <input name="$fields.valueOf("ID")" type="hidden" value="${form.id}">
    <table align="center" width="95%" border="0">
        <tr>
            <td>${messages.get("PRODUCER_FORM_FIELD_NAME")}:</td>
            <td>
                <input name="$fields.valueOf("NAME")" type="text" size="40" maxlength="80" value="$!{form.get($fields.valueOf("NAME"))}">
            </td>

        </tr>
        <tr>
            <td>${messages.get("PRODUCER_FORM_FIELD_NO_ORDERING")}:</td>
            <td>
                <select name="$fields.valueOf("NO_ORDERING")" size="1">
                #if($!{form.get($fields.valueOf("NO_ORDERING"))}==0)
                    <option selected value="0">möglich</option>
                    <option value="1">nicht möglich</option>
                #else
                    <option value="0">möglich</option>
                    <option selected value="1">nicht möglich</option>
                #end
                </select>
            </td>
        </tr>
        <tr>
            <td colspan="2" align="center"><br />
                <input type="submit" value="${messages.get("FORM_BUTTON_OK")}" name="submit">
                <input type="submit" value="${messages.get("FORM_BUTTON_CANCEL")}" name="submit">
            </td>
        </tr>
    </table>
    </form>
    </div>
    #if (${result})
       <p align="center">#insert_message($result)</p>
    #end
#end

