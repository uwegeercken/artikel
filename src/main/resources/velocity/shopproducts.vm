#parse("/velocity/layout.vm")
#@mainLayout()
    <p class="heading">${messages.get("PAGETITLE_SHOP_LIST")} (#if($productorderitems)$productorderitems.size() #else 0#end)</p>
    <p><img id="helpimg" height="22" width="22" src="/img/help_black.png" title="${messages.get("IMAGE_HELP")}" onclick="switchHelp()">
        <a href="/shopcomplete/"><img class="add_external" height="22px" width="22px" src="/img/order.png" title="${messages.get("IMAGE_COMPLETE_ORDER")}"></a>
    </p>
    <div id="help">
        <p class="helptitle">${messages.get("PAGETITLE_SHOP_LIST")}</p>
        <p>${messages.get("HELP1_SHOPPRODUCTS")}</p>
        <p>${messages.get("HELP2_SHOPPRODUCTS")}</p>
        <p><img height="22" width="22" src="/img/order.png">&nbsp;${messages.get("IMAGE_COMPLETE_ORDER")}</p>
    </div>
    <div id="filter">
        <p>Filter: <input id="search" searchtype="productorderitems" type="text""></p>
    </div>
    #foreach($item in $productorderitems)
        <div class="unit" tag="$!item.product.name.toLowerCase()">
            #if($item.product.id>1)<a href="/product/shop/remove/${item.product.id}/producer/${producerid}/"><img class="delete" height="22px" width="22px" src="/img/remove.png" title="${messages.get("IMAGE_SHOP_PRODUCT_REMOVE")}"></a>#end
            #if($item.product.id>1)<a href="/product/shop/increase/${item.product.id}/producer/${producerid}/"><img class="plus" height="22px" width="22px" src="/img/order_plus.png" title="${messages.get("IMAGE_SHOP_PRODUCT_INCREASE")}"></a>#end
            #if($item.product.id>1)<a href="/product/shop/decrease/${item.product.id}/producer/${producerid}/"><img class="minus" height="22px" width="22px" src="/img/order_minus.png" title="${messages.get("IMAGE_SHOP_PRODUCT_DECREASE")}"></a>#end
            <div class="grouptop">
                <p class="small">${messages.get("TYPE_PRODUCT")} #$!item.product.number - $!item.product.producer.name </p>
                <p class="big">${item.amount} - $!item.product.name</p>
                <p class="normal">$!item.product.description </p>
                <p class="normal">${messages.get("PRODUCT_FORM_FIELD_CONTAINER")}: $!{item.product.container.name} - ${messages.get("PRODUCT_FORM_FIELD_ORIGIN")}: $!{item.product.origin.name}</p>
                <p class="normal">${messages.get("PRODUCT_FORM_FIELD_QUANTITY")}: $!{item.product.quantity} - ${messages.get("PRODUCT_FORM_FIELD_WEIGHT")}: $!{item.product.weight} kg</p>
                <p class="normal">${messages.get("PRODUCT_FORM_FIELD_PRICE")}: â‚¬ $!{item.product.price}</p>
            </div>
        </div>
    #end
#end