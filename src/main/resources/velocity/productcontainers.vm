#parse("/velocity/layout.vm")
#@mainLayout()
    <p class="heading">${messages.get("PAGETITLE_PRODUCTCONTAINER_LIST")} ($containers.size())</p>
    <p><img id="helpimg" height="40px" width="40px" src="/img/help_black.png" title="${messages.get("IMAGE_HELP")}" onclick="switchHelp()"><a href="process?action=bsh&ro=1&scriptname=selecteditgroup&id=0&mode=add">
    <img class="add_external" height="40px" width="40px" src="/img/general_add.png" title="${messages.get("IMAGE_PRODUCTCONTAINER_ADD")}"></a></p>
    <div id="help">
        <p class="helptitle">${messages.get("PAGETITLE_PRODUCTCONTAINER_LIST")}</p>
        <p>${messages.get("HELP1_PRODUCTCONTAINER_LIST")}</p>
        <p><img height="22" width="22" src="/img/general_add.png">&nbsp;${messages.get("IMAGE_PRODUCTCONTAINER_ADD")}&nbsp;<img height="22" width="22" src="/img/edit.png">&nbsp;${messages.get("IMAGE_PRODUCTCONTAINER_EDIT")}&nbsp;<img height="22" width="22" src="/img/remove.png">&nbsp;${messages.get("IMAGE_PRODUCTCONTAINER_DELETE")}</p>
    </div>
    <div id="filter">
        <p>Filter: <input id="search" searchtype="containers" type="text""></p>
    </div>
    #foreach($container in $containers)
        <div class="unit" tag="$!container.name.toLowerCase()">
            #if($container.id>0)<a href="/container/${container.id}/"><img class="delete" height="22px" width="22px" src="/img/remove.png" title="${messages.get("IMAGE_PRODUCTCONTAINER_DELETE")}"></a>#end
            #if($container.id>0)<a href="/container/${container.id}/"><img class="edit" height="22px" width="22px" src="/img/edit.png" title="${messages.get("IMAGE_PRODUCTCONTAINER_EDIT")}"></a>#end
            <div class="grouptop">
                <p class="small">${messages.get("TYPE_PRODUCTCONTAINER")}</p>
                <p class="big">$!container.name</a></p>
            </div>
        </div>
    #end
#end