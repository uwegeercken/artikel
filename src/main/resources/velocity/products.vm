#parse("/velocity/layout.vm")
#@mainLayout()
    #set($pagetitle='Produktliste')
    <p class="heading">${messages.get("PAGETITLE_PRODUCT_LIST")} ($products.size())</p>
    <p><img id="helpimg" height="22" width="22" src="/img/help_black.png" title="show help" onclick="switchHelp()">
        <a href="/product/0/"><img class="add_external" height="22px" width="22px" src="/img/product_add.png" title="Produkt hinzufügen"></a>
    </p>
    <div id="help">
        <p class="helptitle">${messages.get("PAGETITLE_PRODUCT_LIST")}</p>
        <p>Users are organized in groups which allow write access to projects that belong to the group.</p>
        <p>The Admin group is a system required group and can not be deleted.</p>
        <p><img height="22" width="22" src="/img/group_add2.png">&nbsp;add new group&nbsp;<img height="22" width="22" src="img/edit.png">&nbsp;edit group&nbsp;<img height="22" width="22" src="img/remove.png">&nbsp;delete group</p>
    </div>
    <div id="filter">
        <p>Filter: <input id="search" searchtype="groups" type="text""></p>
    </div>
    #foreach($product in $products)
        <div class="unit" tag="$!product.name.toLowerCase()">
            #if($product.id>1)<a href="/product/${product.id}/"><img class="delete" height="22px" width="22px" src="/img/remove.png" title="löschen"></a>#end
            #if($product.id>1)<a href="/product/${product.id}?test=gaga/"><img class="edit" height="22px" width="22px" src="/img/edit.png" title="bearbeiten"></a>#end
            <div class="grouptop">
                <p class="small">Produkt #$!product.number </p>
                <p class="big">$!product.name</a></p>
                <p class="normal">$!product.description - $!product.producer.name</p>
                <p class="normal">Container: $!{product.container.name} - Ursprung: $!{product.origin.name}</p>
                <p class="normal">Menge: $!{product.quantity} - Gewicht: $!{product.weight} kg</p>
                <p class="normal">Preis: € $!{product.price}</p>
            </div>
        </div>
    #end
#end