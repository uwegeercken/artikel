#parse("/velocity/macros.vm")
#parse("/velocity/layout.vm")
#@mainLayout()

    <p class="heading">${messages.get("PAGETITLE_PRODUCT_STICKERS_LIST")}</p>
    <div class="error">
        #if (${result})
           <p>#insert_message($result)</p>
        #end
    </div>
    <div class="formbox">
        <table class="table-striped" align="center" width="85%" border="0">
            <tr>
                <th>Nr</th>
                <th>Name</th>
                <th>Anzahl</th>
                <th>Verpackt</th>
                <th>Haltbar</th>
                <th></th>
            </tr>
            #set($rowcounter=0)
            #foreach($product in $products)
            <form method="post" action="/products/stickers/">
                #if($rowcounter % 2 ==0)
                    <tr class="light2">
                #else
                    <tr class="light">
                #end
                    <td>#$!product.number</td>
                    <td>$!product.title $!product.name</td>
                    <td align="center">
                        <input name="id" value="${product.id}" type="hidden">
                        <input name="quantity" type="text" size="2" maxlength="2">
                    </td>
                    <td align="center">
                        <select name="dateOfPackingOffset" size="1">
                            <option value="-1">gestern</option>
                            <option selected value="0">heute</option>
                            <option value="1">morgen</option>
                        </select>
                    </td>
                    <td align="center">
                        <select name="expirationDateOffset" size="1">
                            <option value="5">5 Tage</option>
                            <option selected value="4">4 Tage</option>
                            <option value="3">3 Tage</option>
                        </select>
                    </td>
                    <td align="center">
                        <input type="submit" value="${messages.get("FORM_BUTTON_PRINT")}" name="submit">
                    </td>
                #set($rowcounter=$rowcounter +1)
                </tr>
                </form>
            #end
        </table>
    </div>
#end


